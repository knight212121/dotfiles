#!/bin/bash

function send_notification() {
    current=$(xbacklight -get)
    dunstify "Brightness: $current" -h int:value:$current -r 1
}

case $1 in
    "up")
        xbacklight -inc 5
        send_notification
        ;;
    "down")
        xbacklight -dec 5
        send_notification
        ;;
    *)
        echo "Unknown"
        ;;
esac
